            <!-- SHADOW LAYER -->
            <item
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#27A3A3A3"/>
                    <corners
                        android:topLeftRadius="40dp"
                        android:topRightRadius="40dp"/>
                </shape>
            </item>

            <!-- CONTENT LAYER -->
            <item android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <stroke
                        android:width="5dp"
                        android:color="@color/colorPrimary" />
                    <corners
                        android:topLeftRadius="36dp"
                        android:topRightRadius="36dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
